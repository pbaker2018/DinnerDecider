<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="Wagamama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectedFoodTxt"
            android:textSize="30sp"
            android:fontFamily="@font/muli_bold" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="Decide!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/decideBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/colorPrimary"
            android:fontFamily="@font/muli_bold" android:textSize="18sp"
            android:textColor="@android:color/background_light"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addFoodTxt" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/muli_bold"
            android:hint="add new food ..." android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/addFoodBtn"/>
    <Button
            android:text="Add Food"
            android:layout_width="225dp"
            android:layout_height="53dp"
            android:id="@+id/addFoodBtn" android:fontFamily="@font/muli_bold"
            android:textSize="18sp" style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="90dp"
            app:layout_constraintBottom_toTopOf="@+id/decideBtn"/>

</android.support.constraint.ConstraintLayout>